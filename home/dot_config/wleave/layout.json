{
    "margin-top": 850,
    "margin-bottom": 850,
    "margin-left": 1500,
    "margin-right": 1500,
    "buttons-per-row": "1/1",
    "delay-command-ms": 100,
    "close-on-lost-focus": true,
    "show-keybinds": false,
    "protocol": "layer-shell",
    "buttons": [
        {
            "label" : "lock",
            "action" : "hyprlock",
            "text" : "Lock",
            "keybind" : "l",
            "icon": "/home/user/.config/wleave/icons/lock.svg"
        },
        {
            "label" : "logout",
            "action" : "hyprctl dispatch exit 0",
            "text" : "Logout",
            "keybind" : "e",
            "icon": "/home/user/.config/wleave/icons/logout.svg"
        },
        {
            "label" : "reboot",
            "action" : "systemctl reboot",
            "text" : "Reboot",
            "keybind" : "r",
            "icon": "/home/user/.config/wleave/icons/reboot.svg"
        },
        {
            "label" : "shutdown",
            "action" : "systemctl poweroff",
            "text" : "Shutdown",
            "keybind" : "s",
            "icon": "/home/user/.config/wleave/icons/shutdown.svg"
        }
    ]
}